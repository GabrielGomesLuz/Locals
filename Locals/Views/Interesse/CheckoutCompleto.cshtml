@model ReservaInteresse

<div class="container marginTop1">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleto</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.TitularReserva</strong></p>
            <p>Data de interesse: <strong>@Model.HoraReserva</strong></p>
            <p>Protocolo: <strong>@Model.ReservaInteresseId</strong></p>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th class="text-center">Preço</th>

                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.ReservaItens)
                    {
                        <tr>
                            <td class="text-center"><img src="@item.Imovel.ImagemThumbnailUrl" class="img-fluid rounded-3" style="width: 120px;" /></td>
                            <td class="text-left">@item.Imovel.NomeImovel</td>
                            <td class="text-center">@item.Imovel.Preco.ToString("c")</td>



                            <td class="text-center">
                                <a asp-controller="CarrinhoReserva" asp-action="RemoverImovelDoCarrinho" asp-route-imovelid="@item.Imovel.ImovelId">
                                    <img src="~/Images/trash.svg">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <h4>Obrigado por demonstrar interesse em um de nossos imóveis :)</h4>
            <h5>Em até 2 dias úteis entraremos em contato.</h5>

        </div>
    </div>
</div>

<div class="form-group" style="text-align:left">
    <h3>
        <a class="nav-link text=info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>