
 @model Imovel





<div class="col-6 bg" style="font-size:xx-large"><br />
    <strong>@Model.NomeImovel</strong>
    
    <br />
    <br />
</div>

<div class="container">
    <div class="image-container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Model.ImagemThumbnailUrl"  alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.Imagem1" height="800px" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.Imagem2" height="800px" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImagemUrl3" height="800px" alt="Four slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImagemUrl4" height="800px" alt="Five slide">
                </div>

                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImagemUrl5" height="800px" alt="Five slide">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
</div>
</div>


<br />
<hr />


<div class="col-12 bg">

    <fieldset><strong style="font-size:x-large">Preço</strong></fieldset>
    <h4>R$@Model.Preco</h4>


</div>



<hr />
<div class="col-6 bg">
    
    <fieldset><strong style="font-size:x-large">Descrição</strong></fieldset>

</div>
<div class="col-12 bg" style="font-family:'Franklin Gothic'"><hr />
    
   <h4>@Model.DescricaoDetalhada</h4> 


</div>

<div class="col-6 bg">
    <a class="btn btn-success btn-lg" asp-controller="CarrinhoReserva" asp-action="AdicionarItemNoCarrinhoReserva" asp-route-ImovelId="@Model.ImovelId" role="button" style="color:whitesmoke">Reservar</a>
    <a class="btn btn-danger btn-lg" asp-controller="Home" asp-action="Index" role="button" style="color:whitesmoke">Voltar</a>
</div>

