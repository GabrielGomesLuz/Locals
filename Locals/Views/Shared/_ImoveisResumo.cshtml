@model Imovel


<style>
    .col{


        align-items:flex-end;
    }
</style>

 <section id="container">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                  <div class="card">
                    <img src="@Model.ImagemThumbnailUrl" class="card-img-top" alt="Hollywood Sign on The Hill"/>
                    <div class="card-body">
                    <h4 class="card-title"><a asp-controller="Imoveis" asp-action="Details" asp-route-imovelid="@Model.ImovelId">@Model.NomeImovel</a></h4>
                      <p class="card-text">
                        @Model.DescricaoCurta
                        <h5>@Model.Preco.ToString("c")</h5>
                      </p>
                    </div>
                    <a class="btn btn-primary brn-sm btn-light" asp-controller="CarrinhoReserva" asp-action="AdicionarItemNoCarrinhoReserva" asp-route-ImovelId="@Model.ImovelId" role="button" style="color: black;">Reservar</a>
                  </div>
                </div>
                </div>
                
        </section>