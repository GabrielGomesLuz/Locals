@model IEnumerable<Locals.Models.ReservaInteresse>


    <h2>Interesses por período</h2>


<div class="form-group">
    <form class="form-group" >
            <label for="minDate">Data Inicial</label>
            <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
        
    <div class="form-group">
        <label for="minDate">Data Final</label>
        <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
    </div>

<button type="submit" class="btn btn-sucess">Filtrar</button>
</form>
</div>


<div class="panel-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="sucess">
                <th>
                    @Html.DisplayNameFor(model => model.TitularReserva)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.TelefoneTitular)
                </th>

                <th>
                    Imóveis
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.HoraReserva)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitularReserva)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneTitular)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ReservaItens.Count)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HoraReserva)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>