@model IEnumerable<Locals.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<style>
    #txt {
        padding-top: 30px;
    }
</style>

<h1 id="txt">Categorias</h1>

<p>
    <a asp-action="Create">Adicionar categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
